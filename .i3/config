bindsym $mod+Shift+m exec "pacmd set-source-mute alsa_input.usb-0b0e_Jabra_REVO_v4.0.0_1C48F9008D3F040000-00.analog-mono false"

set $MODE_SYSTEM "(c) reload, (r) restart, (p) poweroff, (P) reboot, (e) exit, (l) lock"

mode $MODE_SYSTEM {
    bindsym c reload; mode "default"
    bindsym r restart; mode "default"
    bindsym l exec "i3lock -c 000000"; mode "default"
    bindsym p exec "systemctl poweroff"; mode "default"
    bindsym Shift+p exec "systemctl reboot"; mode "default"
    bindsym e mode $MODE_EXIT

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $MODE_EXIT "(y) yes, (n) no"

mode $MODE_EXIT {
    bindsym y exit

    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+p mode $MODE_SYSTEM

mode "network" {
    bindsym u exec "scripts/rofi_nmcli bring_up"; mode "default"
    bindsym d exec "scripts/rofi_nmcli bring_down"; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+n mode "network"

set $MODE_DISPLAY "(1) 10%, (2) 30%, (3) 60%, (d|D) DPMS off|on"

mode $MODE_DISPLAY {
    bindsym 1 exec "xbacklight '=10%'"; mode "default"
    bindsym 2 exec "xbacklight '=30%'"; mode "default"
    bindsym 3 exec "xbacklight '=60%'"; mode "default"
    bindsym d exec "xset s off -dpms"; mode "default"
    bindsym Shift+d exec "xset s on +dpms"; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+d mode $MODE_DISPLAY

set $MODE_RESIZE "(j|k) grow|shrink height, (h|l) grow|shrink width, (c) center, (1|2|3) set predefined sizes"

mode $MODE_RESIZE {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym 1 resize set 400 px 600 px
    bindsym 2 resize set 1024 px 768 px
    bindsym 3 resize set 1920 px 1080 px

    bindsym c move position center

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+r mode $MODE_RESIZE

