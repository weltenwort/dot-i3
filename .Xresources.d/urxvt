! vim: set ft=xdefaults:

! scrolling
URxvt.scrollBar: false
URxvt.secondaryScreen: true
URxvt.secondaryScroll: true
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeypress: true
URxvt*saveLines: 10000

! font
URxvt.font: xft:monospaceFont:style=monospaceFontStyle:pixelsize=monospaceFontPixelSize

! font-size extension
URxvt.perl-ext-common: font-size
URxvt.keysym.C-plus: font-size:increase
URxvt.keysym.C-minus: font-size:decrease
URxvt.keysym.C-0: font-size:reset

! colors
URxvt*foreground:   base05
#ifdef background_opacity
URxvt*background:   [background_opacity]base00
#else
URxvt*background:   base00
#endif
URxvt*cursorColor:  base05
